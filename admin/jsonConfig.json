{
	"i18n": true,
	"type": "panel",
	"items": {
		"_connection": {
			"newLine": true,
			"type": "header",
			"text": "BLE Connection",
			"sm": 12,
			"md": 12,
			"lg": 12,
			"size": 3
		},
		"updateCycle": {
			"type": "value",
			"label": "update cycle",
			"newLine": false,
			"sm": 12,
			"md": 6,
			"lg": 4
		},
		"_scan": {
			"type": "sendTo",
			"label": "Scan",
			"command": "scan",
			"variant": "outlined"
		},
		"_device": {
			"newLine": true,
			"type": "header",
			"text": "Device settings",
			"sm": 12,
			"md": 12,
			"lg": 12,
			"size": 3
		},
		"_devicetable": {
			"newLine": true,
			"type": "header",
			"text": "Device settings in table format",
			"sm": 12,
			"md": 12,
			"lg": 12,
			"size": 3
		},
		"devices": {
			"sm": 12,
			"newLine": true,
			"type": "table",
			"items": [
				{
					"type": "text",
					"width": "20%",
					"title": "name",
					"attr": "devId",
					"filter": false,
					"sort": false,
					"default": ""
				},
				{
					"type": "text",
					"width": "20%",
					"title": "id",
					"attr": "devName",
					"filter": false,
					"sort": false,
					"default": ""
				},
				{
					"type": "select",
					"width": "20%",
					"options": [
						{ "value": "none", "label": "none" },
						{ "value": "gs_b2500", "label": "Green Solar B2500 (2,2kWh)" }
					],
					"title": "Battery Type",
					"attr": "deviceType",
					"filter": false,
					"sort": false,
					"default": "none"
				},
				{
					"type": "checkbox",
					"title": "Slave 1",
					"width": "10%",
					"hidden": "data.deviceType === 'b2500'",
					"attr": "deviceSlave1",
					"filter": false,
					"sort": false,
					"default": false
				},
				{
					"type": "checkbox",
					"title": "Slave 2",
					"width": "10%",
					"hidden": "data.deviceType === 'b2500' ",
					"attr": "deviceSlave12",
					"filter": false,
					"sort": false,
					"default": false
				}
			]
		},
		"_debugBattery": {
			"newLine": true,
			"type": "header",
			"text": "DEBUG settings",
			"sm": 12,
			"md": 12,
			"lg": 12,
			"size": 3
		},
		"msgStateCreationBattery": {
			"type": "checkbox",
			"label": "msgStateCreationBattery",
			"sm": 12,
			"md": 6,
			"lg": 4
		},
		"msgUpdateBattery": {
			"type": "checkbox",
			"label": "msgUpdateBattery",
			"sm": 12,
			"md": 6,
			"lg": 4
		},
		"msgUpdateValueBattery": {
			"type": "checkbox",
			"label": "msgUpdateValueBattery",
			"sm": 12,
			"md": 6,
			"lg": 4
		},
		"msgSetGetBattery": {
			"type": "checkbox",
			"label": "msgSetGetBattery",
			"sm": 12,
			"md": 6,
			"lg": 4
		},
		"msgCmdBattery": {
			"type": "checkbox",
			"label": "msgCmdBattery",
			"sm": 12,
			"md": 6,
			"lg": 4
		}
	}
}
