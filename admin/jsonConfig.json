{
	"i18n": true,
	"type": "panel",
	"items": {
		"_userdata": {
			"newLine": true,
			"hidden": "true",
			"type": "header",
			"text": "User Data",
			"sm": 12,
			"md": 12,
			"lg": 12,
			"size": 3
		},
		"userName": {
			"type": "text",
			"label": "user name",
			"newLine": true
		},
		"userPassword": {
			"type": "text",
			"label": "user password",
			"newLine": true
		},
		"_connection": {
			"newLine": true,
			"type": "header",
			"text": "Connection settings",
			"sm": 12,
			"md": 12,
			"lg": 12,
			"size": 3
		},
		"mqttBroker": {
			"type": "text",
			"label": "mqtt broker",
			"newLine": true
		},
		"mqttPort": {
			"type": "text",
			"label": "mqtt port",
			"newLine": false
		},
		"_auth": {
			"newLine": true,
			"type": "header",
			"text": "MQTT Authentication settings",
			"sm": 12,
			"md": 12,
			"lg": 12,
			"size": 3
		},
		"mqttUserId": {
			"type": "text",
			"label": "mqtt userId",
			"newLine": false
		},
		"mqttUserName": {
			"type": "text",
			"label": "mqtt user name",
			"newLine": false
		},
		"mqttPwd": {
			"visible": true,
			"label": "mqtt pwd",
			"newLine": false
		},
		"_create": {
			"type": "sendTo",
			"label": "Create Login Data",
			"command": "create",
			"variant": "outlined",
			"useNative": true,
			"jsonData": "{\"user\": \"${data.userName}\", \"pass\": \"${data.userPassword}\"}}"
		},
		"_test": {
			"type": "sendTo",
			"label": "Test Message Feedback",
			"command": "test",
			"variant": "contained",
			"jsonData": "{\"user\": \"${data.mqttUserName}\", \"pass\": \"${data.mqttPwd}\", \"url\": \"${data.mqttBrokerl}\", \"port\": ${data.mqttPort}, \"clientId\": \"${data.mqttClientId}\"}"
		},
		"_send": {
			"type": "sendTo",
			"label": "Send",
			"command": "create",
			"variant": "outlined",
			"useNative": true,
			"jsonData": "{\"user\": \"${data.userName}\", \"msg\": \"Hello World\"}}"
		},
		"deviceName": {
			"type": "text",
			"label": "device Name",
			"newLine": true
		},
		"_device": {
			"newLine": true,
			"type": "header",
			"text": "Device settings",
			"sm": 12,
			"md": 12,
			"lg": 12,
			"size": 3
		},
		"deviceId": {
			"type": "text",
			"label": "device Id",
			"newLine": true
		}
	}
}
